    <TextView android:id="@+id/textView2" android:layout_width="match_parent" android:layout_height="84dp" android:layout_marginTop="63dp" android:text="You can Add /View / Delete the emergency contact numbers         eg. +919996134567" android:editable="false" android:layout_alignParentTop="true" android:textAlignment="center" android:layout_alignParentStart="true"/>
